<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/layout_bus_a"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:background="#ffffff"
            android:textSize="24dp"
            android:textColor="#000000"
            android:layout_gravity="bottom"
            android:text="잠시만 기다려주세요.."
            android:id="@+id/textView"/>

    <ImageButton
            android:layout_width="143dp"
            android:layout_height="60dp"
            android:id="@+id/switchToA"
            android:padding="0dp"
            android:src="@drawable/a_button"
            android:background="#ffffff"
            android:layout_gravity="left|bottom"/>

    <ImageButton
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:src="@drawable/move_to_cnu"
            android:layout_gravity="center|bottom"
            android:background="#ffffff"
            android:id="@+id/moveToCNU"/>

    <ImageButton
            android:layout_width="143dp"
            android:layout_height="60dp"
            android:id="@+id/switchToB"
            android:padding="0dp"
            android:src="@drawable/b_button"
            android:background="#ffffff"
            android:layout_gravity="right|bottom"/>




</FrameLayout>